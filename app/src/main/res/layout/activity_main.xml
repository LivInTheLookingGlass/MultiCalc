<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions. -->
    <FrameLayout android:id="@+id/container" android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/background_basic"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000">

        <EditText
            android:id="@+id/result_id"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.09"
            />

        <LinearLayout
            android:id="@+id/row0"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.1">

            <Button
                android:id="@+id/Btnclear_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:text="clr"
                android:onClick="btnclearClicked"
                />

            <Button
                android:id="@+id/Btnln_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:text="ln"
                android:onClick="btnlnClicked"
                />

            <Button
                android:id="@+id/Btnfact_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:text="!"
                android:onClick="btnfactClicked"
                />

            <Button
                android:id="@+id/Btndivide_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:text="÷"
                android:onClick="btndivideClicked"
                />

            <Button
                android:id="@+id/Btnmulti_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:text="×"
                android:onClick="btnmultiClicked"
                />

            <Button
                android:id="@+id/Btnback_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:text="\u232B"
                android:onClick="btnbackClicked"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row1"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.1">

            <Button
                android:id="@+id/Btnroot_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="x√y"
                android:onClick="btnrootClicked"
                />

            <Button
                android:id="@+id/Btncrt_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="^"
                android:onClick="btn7Clicked"
                />

            <Button
                android:id="@+id/Btn7_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="7"
                android:onClick="btn7Clicked"
                />

            <Button
                android:id="@+id/Btn8_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="8"
                android:onClick="btn8Clicked"
                />

            <Button
                android:id="@+id/Btn9_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="9"
                android:onClick="btn9Clicked"
                />

            <Button
                android:id="@+id/Btnplus_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="+"
                android:onClick="btnplusClicked"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            android:layout_below="@id/row1">

            <Button
                android:id="@+id/Btnsinh_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="sinh"
                android:onClick="btnsinhClicked"
                />

            <Button
                android:id="@+id/Btnsin_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="sin"
                android:onClick="btnsinClicked"
                />

            <Button
                android:id="@+id/Btn4_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="4"
                android:onClick="btn4Clicked"
                />

            <Button
                android:id="@+id/Btn5_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="5"
                android:onClick="btn5Clicked"
                />

            <Button
                android:id="@+id/Btn6_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="6"
                android:onClick="btn6Clicked"
                />

            <Button
                android:id="@+id/Btnminus_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="-"
                android:onClick="btnminusClicked"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row3"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            android:layout_below="@id/row2">

            <Button
                android:id="@+id/Btncosh_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="cosh"
                android:onClick="btncoshClicked"
                />

            <Button
                android:id="@+id/Btncos_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="cos"
                android:onClick="btncosClicked"
                />

            <Button
                android:id="@+id/Btn1_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="1"
                android:onClick="btn1Clicked"
                />

            <Button
                android:id="@+id/Btn2_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="2"
                android:onClick="btn2Clicked"
                />

            <Button
                android:id="@+id/Btn3_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="3"
                android:onClick="btn3Clicked"
                />

            <Button
                android:id="@+id/BtnPar_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="( )"
                android:onClick="btnParClicked"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row4"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            android:layout_below="@id/row3">

            <Button
                android:id="@+id/Btntanh_id"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:text="tanh"
                android:onClick="btntanhClicked"
                />

            <Button
                android:id="@+id/Btntan_id"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:text="tan"
                android:onClick="btntanClicked"
                />

            <Button
                android:id="@+id/Btndot_id"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:text="."
                android:onClick="btndotClicked"
                />

            <Button
                android:id="@+id/Btnzero_id"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:text="0"
                android:onClick="btn0Clicked"
                />

            <Button
                android:id="@+id/Btnsign_id"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:text="±"
                android:onClick="btnSignClicked"
                />

            <Button
                android:layout_below="@id/row4"
                android:id="@+id/Btnequal_id"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:text="="
                android:onClick="btnequalClicked"
                />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/calc_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- android:layout_gravity="start" tells DrawerLayout to treat
         this as a sliding drawer on the left side for left-to-right
         languages and on the right side for right-to-left languages.
         If you're not building against API 17 or higher, use
         android:layout_gravity="left" instead. -->
    <!-- The drawer is given a fixed width in dp and extends the full height of
         the container. -->
    <fragment android:id="@+id/navigation_drawer"
        android:layout_width="@dimen/navigation_drawer_width" android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="io.github.gappleto97.multicalc.NavigationDrawerFragment"
        tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>
